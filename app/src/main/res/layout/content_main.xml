<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="xyz.kt.senser.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="@color/colorEditText"
            android:text="user.one"
            android:ems="8"
            android:id="@+id/edtUser"
            android:layout_weight="0.01"
            android:textSize="12sp"
            android:textStyle="normal|bold"/>

        <EditText
            android:text="fj09f36demo37490"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorEditText"
            android:inputType="textPassword"
            android:ems="8"
            android:id="@+id/edtPasswd"
            android:layout_weight="0.01"
            android:textSize="10sp"
            android:textStyle="normal|bold"/>

        <Button
            android:text="TRIP STARTED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tglStartEnd"
            android:layout_weight="0.2"
            android:backgroundTint="@android:color/holo_blue_light"/>

        <Button
            android:text="Good Driving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnGood"
            android:layout_weight="0.3"
            android:backgroundTint="@android:color/holo_green_light"/>

        <Button
            android:text="BAD Driving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:id="@+id/btnBad"
            android:backgroundTint="@android:color/holo_orange_light"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/comment"
            android:layout_weight="0.01"
            android:textColor="@color/colorEditText"
            android:textSize="14sp"
            android:textStyle="normal|bold" />

        <Button
            android:text="Make Note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:id="@+id/btnPost"/>

        <TextView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="?attr/colorPrimary"
            android:text="0km/h  0mp/h"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>
